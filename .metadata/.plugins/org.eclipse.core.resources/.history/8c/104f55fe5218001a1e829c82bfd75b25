package SecretarySystem;

import java.io.File;
import java.io.FilenameFilter;
import java.util.Scanner;

import LoginSystem.Person;

public class secretary {
		
	public File[] tempFiles;
	public int i = 0;
	
		public secretary()
		{
			
		}
		
		public void renameFile(String filename, String uniqueNumber)
		{
		
			uniqueNumber = uniqueNumber.trim() + ".txt";
			
			File approved = new File(filename);
			//File rename = new File(uniqueNumber);

			System.out.println(approved.getAbsolutePath() + "\n");
			
			if (approved.renameTo(new File(uniqueNumber))) {  
				System.out.println(filename + " has been changed to ");
				}else {
						System.out.println("error");
					}
		}
		
		public void notApproved(String filename)
		{
			
			File notApproved = new File(filename);
			if (notApproved.delete()) {
				System.out.println(filename + " is deleted");
				}else {
					System.out.println("error");
				}
			}
			
			
		

		public File[] FindTextFiles(String[] temps)
		{						
				File directoryPath = new File(System.getProperty("user.dir"));			
				
				File[] files=directoryPath.listFiles(new FilenameFilter() {
					@Override
					public boolean accept(File dir, String name) {
						
						return name.startsWith("temp");
					}
				});
				
								
					tempFiles = files; 					
				
			
				return tempFiles;
			}
		}

