public class DateTime extends javax.swing.JFrame{
	
	JFormattedTextField textField = new JFormattedTextField(DateFormat.getDateInstance(DateFormat.SHORT));
	protected Object frame;
	
	public static void main() {
		
		EventQueue.invokeLater(new Runnable() {
			public void run() {
				try {
					DateTime textField = new DateTime();
					((JComponent) textField.frame).setVisible(true);
				} catch (Exception e) {
					e.printStackTrace();
				}																			
			}
		});
	}
	
	
	public DateTime() {
	
		setDefaultCloseOperation(EXIT_ON_CLOSE);
		setSize(369, 362);
		setTitle("Appointment Picker");
		Container cp = getContentPane();
		FlowLayout fl = new FlowLayout();
		cp.setLayout(fl);
		cp.setComponentOrientation(ComponentOrientation.LEFT_TO_RIGHT);
		textField.setValue(new Date());
		textField.setPreferredSize(new Dimension(130, 30));
		cp.add(textField);
		JButton calButton = new JButton("Pick a date)");
		cp.add(calButton);
	}
	
	public String showDate(String dateNow) {
		
		Date d = new Date();
		SimpleDateFormat s = new SimpleDateFormat("dd-MM-yyyy");
		dateNow = s.format(d);
		System.out.println(dateNow);
		return dateNow;
	}
	
